<% if @message.errors.any? %>
  $('.message-box').html("<%= j render 'form' %>").fadeIn(300);
  $('.message-state').html("<%= j render 'state' %>").fadeIn(300);
  initAdaptivePlaceholders()
  decorateAdaptiveElements()
<% else %>
  $('.message-box .message-form-wrapper').fadeOut(200, function() {
    $(this).html("<%= j render partial: 'thanks' %>").fadeIn(200).delay(8000).fadeOut(200, function() {
      $('.message-box').html("<%= j render partial: 'form' %>").fadeIn(200);
      initAdaptivePlaceholders()
      decorateAdaptiveElements()
    });
  });
<% end %>
